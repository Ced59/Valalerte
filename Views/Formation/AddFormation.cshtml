@{
    ViewData["Title"] = "Ajouter une formation";
}

<h1 class="text-center mt-4 mb-4">Bienvenue @Model.User.Firstname @Model.User.Name</h1>

<p class="text-center">Vous êtes connecté en tant que @Model.User.Role <br /><a class="justify-content-center" asp-area="" asp-controller="User" asp-action="Logout">Se déconnecter</a></p>


<div class="col-md-3 col-xs-12 mt-3">


    <form class="form-group card p-2 mt-3" asp-controller="Formation" asp-action="Add" method="post">
        <div class="card-header">
            Ajouter une formation
        </div>
        <div class="form-group card-body">
            <input type="text"
                   name="name"
                   class="form-control"
                   placeholder="Nom de la formation"
                   required>
        </div>

        <button type="submit" class="btn btn-primary text-center">Ajouter</button>

    </form>
</div>