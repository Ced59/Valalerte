@{
    Layout = null;
}

@using ValarAlerte.ViewModels


<!DOCTYPE html>

<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Identification</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>


<body>
    <div class="container">

        <img class="card-img offset-md-4 col-md-4" src="~/images/LOGO-VALAREP-300x162.jpg" alt="logo" />

        <h1 class="text-center mt-4 mb-4">Bienvenue sur le portail ValAlerte</h1>

        <div class="offset-md-4 col-md-4 col-xs-12">


            @if ((Model != null))
            {

                <div class="row">
                    <div class="col-lg-12 alert alert-danger">
                        <div class="Errors">
                            @foreach (string e in Model.Errors)
                            {
                                <div class="row">
                                    <div class="col-lg-12">
                                        @e
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

            }


            <form class="form-group" asp-controller="User" asp-action="Index" method="post">
                <div class="form-group">
                    <label>Identifiant : <span class="text-red">*</span></label>
                    @if (Model != null)
                    {
                        @if (Model.Mail != null)
                        {
                            <input type="text"
                                   name="mail"
                                   class="form-control"
                                   placeholder="Votre adresse Mail"
                                   value=@Model.Mail 
                                   required>
                        }
                        else
                        {
                            <input type="text"
                                   name="mail"
                                   class="form-control"
                                   placeholder="Votre adresse Mail" 
                                   required>
                        }
                    }
                    else
                    {
                        <input type="text"
                               name="mail"
                               class="form-control"
                               placeholder="Votre adresse Mail" 
                               required>
                    }


                </div>
                <div class="form-group">
                    <label>Mot de passe : <span class="text-red">*</span></label>
                    <input type="password" name="password" class="form-control" placeholder="Mot de passe" required>
                </div>

                <button type="submit" class="btn btn-primary text-center float-right">Entrer</button>

                <small class="form-text text-muted text-red">* Obligatoire</small>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

</body>
</html>
